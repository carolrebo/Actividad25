<h1>Sales#new</h1>
<p>Find me in app/views/sales/new.html.erb</p>

<%= form_with model:@sales, local: true do |f| %>
<%= f.label :cod, "Cod"%>
<%= f.number_field :cod %>
<%= f.label :detail, "Detail"%>
<%= f.text_area :detail %>
<%= f.label :category, "Category"%>
<%= f.text_field :category %>
<%= f.label :value, "Value"%>
<%= f.number_field :value %>
<%= f.label :discount, "Discount"%>
<%= f.number_field :discount %>
<%= f.label :tax, "Tax"%>
<%= f.check_box :tax %>
<%= f.submit "Crear" %>
<% end %>